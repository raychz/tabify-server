{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "npm",
        "script": "start",
        "label": "front-end",
        "options": {
          "cwd": "tabify"
        },
        "isBackground": true,
        "presentation": {
          "focus": true,
          "panel": "dedicated"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "owner": "typescript",
          "source": "ts",
          "applyTo": "closedDocuments",
          "fileLocation": [
            "relative",
            "${cwd}"
          ],
          "pattern": "$tsc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "(.*?)"
            },
            "endsPattern": {
              "regexp": "Compiled successfully."
            }
          }
        }
      },
        {
            "label": "docker",
            "type": "shell",
            "options": {
                "cwd": "tabify-server"
            },
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            },
            "command": "docker-compose up",
            "problemMatcher": [
                {
                  "pattern": [
                    {
                      "regexp": ".",
                      "file": 1,
                      "location": 2,
                      "message": 3
                    }
                  ],
                  "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                  }
                }
              ]
        },
        {
            "label": "post_debug_kill_docker",
            "command": "echo ${input:terminate_docker}",
            "type": "shell",
        },
        {
          "label": "post_debug_kill_front-end",
          "command": "echo ${input:terminate_front-end}",
          "type": "shell",
      },
    ],
    "inputs": [
        {
          "id": "terminate_docker",
          "type": "command",
          "command": "workbench.action.tasks.terminate",
          "args": "docker"
        },
        {
          "id": "terminate_front-end",
          "type": "command",
          "command": "workbench.action.tasks.terminate",
          "args": "front-end"
        },
      ]
}