{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend",
            "type": "chrome",
            "request": "launch",
            "cwd": "${workspaceRoot}/tabify",
            "smartStep": true,
            "breakOnLoad": true,
            "preLaunchTask": "front-end",
            "postDebugTask": "post_debug_kill_front-end",
            "url": "http://localhost:4200/#",
            "webRoot": "${workspaceRoot}/tabify",
            "skipFiles": ["<node_internals>/**", "**/*.js", "**/*.spec.ts"],
            "sourceMaps": true,
          },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend",
            "cwd": "${workspaceRoot}/tabify-server",
            "port": 9229,
            "preLaunchTask": "docker",
            "postDebugTask": "post_debug_kill_docker",
            "restart": true,
            "skipFiles": ["<node_internals>/**", "**/*.js"],
            "runtimeExecutable": "npm",
            "console": "integratedTerminal",
            "presentation": {
                "hidden": false,
                "group": "backend"
            },
            "runtimeArgs": [
                "run", "debug"
            ]
        },
    ],
    "compounds": [
        {
            "name": "Fullstack",
            "configurations": ["Backend", "Frontend"]
        }
    ]
}